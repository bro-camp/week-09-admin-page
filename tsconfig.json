{
  "extends": "./tsconfig-preset",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "#global/*": ["global/*"],
      "#lib/*": ["lib/*"],
      "#types/*": ["types/*"],
      "#routers/*": ["routers/*"],
      "#models/*": ["models/*"],
      "#views/*": ["views/*"],
      "#controllers/*": ["controllers/*"],
      "#middlewares/*": ["middlewares/*"],
      "#root/*": ["./*"],
      "#sroot/*": ["./../*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
